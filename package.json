{
  "name": "leafjs-monorepo",
  "version": "0.0.1",
  "description": "A new, simple and fast JS Framework",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LeafJSLabs/leaf.js"
  },
  "scripts": {
    "test": "echo No Tests for now",
    "build": "turbo run build",
    "prepare": "husky install",
    "format": "echo No Format Script for now"
  },
  "author": "DasLixou, LeafJS Labs",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "^7.0.4",
    "turbo": "^1.0.25"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"]
      },
      "test": {
        "dependsOn": ["build"]
      },
      "dev": {
        "cache": false,
        "dependsOn": ["build", "test"]
      }
    }
  }
}
