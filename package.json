{
  "name": "leafjs-monorepo",
  "version": "0.0.1",
  "description": "A new, simple and fast JS Framework",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BeastTrees/leaf.js"
  },
  "scripts": {
    "prepare": "husky install",
    "update": "yarn upgrade --latest && yarn autoclean --force",
    "test": "turbo run test",
    "build": "turbo run build",
    "format": "turbo run format",
    "prepublish": "turbo run format build test"
  },
  "author": "DasLixou, LeafJS Labs",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "^7.0.4",
    "turbo": "^1.2.1"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "dependsOn": [
          "build"
        ]
      },
      "format": {
        "dependsOn": []
      },
      "dev": {
        "cache": false,
        "dependsOn": [
          "build",
          "test"
        ]
      }
    }
  },
  "packageManager": "yarn@1.22.17"
}
